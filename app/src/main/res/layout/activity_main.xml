<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/certi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:text="CRITERIA/FILTER"
        android:textSize="30dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_below="@+id/certi"
        app:cardCornerRadius="20dp"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"

       android:textSize="20dp"
        android:textStyle="bold"
        android:text="SSC Marks"
        android:layout_height="wrap_content"></TextView>

    <EditText
        android:layout_width="match_parent"
android:id="@+id/ssc"
        android:layout_height="wrap_content">

    </EditText>

</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="HSC Marks"
        android:layout_height="wrap_content"></TextView>

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/hsc"
        android:layout_height="wrap_content">

    </EditText>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text="UG Marks"
            android:textSize="25sp"
            android:layout_marginTop="10dp"

            android:textStyle="bold"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="FY Marks"
            android:layout_height="wrap_content"></TextView>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/ufy"
            android:layout_height="wrap_content">

        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"

            android:textSize="20dp"
            android:textStyle="bold"
            android:text="SY Marks"
            android:layout_height="wrap_content"></TextView>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/usy"
            android:layout_height="wrap_content">

        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="TY Marks"
            android:layout_height="wrap_content"></TextView>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/uty"
            android:layout_height="wrap_content">

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text="PG Marks"
            android:textSize="25sp"
            android:layout_marginTop="10dp"

            android:textStyle="bold"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="FY Marks"
            android:layout_height="wrap_content"></TextView>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/pfy"
            android:layout_height="wrap_content">

        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"

            android:textSize="20dp"
            android:textStyle="bold"
            android:text="SY Marks"
            android:layout_height="wrap_content"></TextView>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/psy"
            android:layout_height="wrap_content">

        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="TY Marks"
            android:layout_height="wrap_content"></TextView>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/pty"
            android:layout_height="wrap_content">

        </EditText>
    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="30dp"
       android:id="@+id/save"
        android:text="save"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
       android:id="@+id/show"
        android:text="show"
        android:textSize="20dp"
        android:textStyle="bold" />


</LinearLayout>



    </androidx.cardview.widget.CardView>



</RelativeLayout>